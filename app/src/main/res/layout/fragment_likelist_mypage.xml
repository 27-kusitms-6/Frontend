<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_11"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv1_viewpager_mypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_plus_mypage"
            android:fontFamily="@font/suit_bold"
            android:layout_marginEnd="@dimen/size_19"
            android:layout_marginStart="@dimen/size_19"
            android:text="@string/mypage_tv_likelist"
            android:textColor="@color/likeit_font_black_30"
            android:textSize="@dimen/font_size_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint1_likelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_11"
                app:layout_constraintTop_toBottomOf="@id/tv1_viewpager_mypage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/size_19">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item1_scroll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item1_lielist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/item2_likelist"
                    android:layout_marginStart="@dimen/size_12"
                    app:layout_constraintStart_toEndOf="@id/item1_scroll1"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv2_viewpager_mypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mypage_tv2_likelist"
            android:textSize="@dimen/font_size_14"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginStart="@dimen/size_19"
            android:fontFamily="@font/suit_bold"
            android:textColor="@color/likeit_font_black_30"
            android:layout_marginEnd="19dp"
            android:drawableEnd="@drawable/ic_plus_mypage"
            app:layout_constraintTop_toBottomOf="@id/constraint1_likelist"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2_likelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_11"
            app:layout_constraintTop_toBottomOf="@id/tv2_viewpager_mypage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/size_19">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item3_scroll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item3_likelist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item4_scroll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item4_likelist"
                android:layout_marginStart="@dimen/size_12"
                app:layout_constraintStart_toEndOf="@id/item3_scroll1"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>