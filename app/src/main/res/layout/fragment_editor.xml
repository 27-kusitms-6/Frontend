<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_image_slider_editor"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="270dp">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider_editor"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_placeholder="@color/black"
                    app:iss_error_image="@color/black"
                    app:iss_corner_radius="5"
                    app:iss_selected_dot="@drawable/default_selected_dot"
                    app:iss_unselected_dot="@drawable/default_unselected_dot"
                    app:iss_period="1000" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_editor"
                app:layout_constraintTop_toBottomOf="@id/constraint_image_slider_editor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/top_filter_bar_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/icon_filter_editor"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv1_content_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_test51"
                    app:layout_constraintTop_toBottomOf="@id/top_filter_bar_editor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/ll1_content_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/iv1_content_editor"
                    app:layout_constraintStart_toStartOf="@id/iv1_content_editor"
                    app:layout_constraintEnd_toEndOf="@id/iv1_content_editor"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시은 에디터의 또간집"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/suit_bold"
                        android:textSize="18sp"
                        android:textColor="#303030"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ep.2 홍대 공덕편"
                        android:fontFamily="@font/suit_medium"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv2_content_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_test52"
                    app:layout_constraintTop_toBottomOf="@id/ll1_content_editor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="29dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/ll2_content_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_13"
                    app:layout_constraintTop_toBottomOf="@id/iv2_content_editor"
                    app:layout_constraintStart_toStartOf="@id/iv2_content_editor"
                    app:layout_constraintEnd_toEndOf="@id/iv2_content_editor"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시은 에디터의 또간집"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:textSize="16sp"
                        android:textColor="#303030"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ep.1 화곡편"
                        android:fontFamily="@font/suit_medium"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv3_content_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_test_53"
                    app:layout_constraintTop_toBottomOf="@id/ll2_content_editor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:id="@+id/ll3_content_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/iv3_content_editor"
                    app:layout_constraintStart_toStartOf="@id/iv3_content_editor"
                    app:layout_constraintEnd_toEndOf="@id/iv3_content_editor"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서현 에디터의 또간집"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:textSize="16sp"
                        android:textColor="#303030"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ep.01"
                        android:fontFamily="@font/suit_medium"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_editor">
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>