<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_height="170dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_save_item"
            android:layout_width="155dp"
            android:layout_height="104dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/iv_example_save_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_save_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_save_item"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/size_9"
            android:fontFamily="@font/suit_semibold"
            android:textColor="@color/likeit_font_black_30"
            android:layout_marginTop="112dp"
            app:layout_constraintStart_toStartOf="@id/iv_save_item"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content_save_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_save_item"
            android:textSize="10sp"
            android:textColor="@color/likeit_font_black_30"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/size_9"
            android:layout_marginTop="@dimen/size_2"
            android:layout_marginEnd="@dimen/size_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_save_item"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save_off_list"
            android:layout_marginTop="@dimen/size_9"
            android:layout_marginEnd="@dimen/size_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
</androidx.cardview.widget.CardView>