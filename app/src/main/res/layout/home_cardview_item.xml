<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_cardview_item"
        android:layout_width="@dimen/size_155"
        android:layout_height="@dimen/size_168"
        android:layout_marginStart="@dimen/size_10"
        app:cardElevation="@dimen/size_5"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tv_recommendation_item1_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_106"
                android:contentDescription="@string/home_content_image"
                android:src="@drawable/ic_home_examlple_image"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recommendation_item1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_7"
                android:layout_marginTop="@dimen/size_3"
                android:fontFamily="@font/suit_semibold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recommendation_item1_image" />

            <ImageView
                android:id="@+id/item1_star"
                android:layout_width="@dimen/size_10"
                android:layout_height="@dimen/size_10"
                android:contentDescription="@string/home_content_image"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/tv_recommendation_item1_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/tv_recommendation_item1_name"
                app:layout_constraintTop_toTopOf="@+id/tv_recommendation_item1_name"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/tv_recommendation_item1_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_5"
                android:fontFamily="@font/suit_regular"
                android:text=""
                android:textColor="@color/pink_500"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/item1_star"
                app:layout_constraintStart_toEndOf="@+id/item1_star"
                app:layout_constraintTop_toTopOf="@+id/item1_star" />

            <ImageView
                android:id="@+id/recommendation_item1_sticker1"
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_18"
                android:layout_margin="5dp"
                android:src="@drawable/ic_sticker1"
                android:contentDescription="@string/home_content_image1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recommendation_item1_name" />

            <ImageView
                android:id="@+id/recommendation_item1_sticker2"
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_18"
                android:layout_margin="@dimen/size_5"
                android:src="@drawable/ic_sticker1"
                android:contentDescription="@string/home_content_image1"
                app:layout_constraintStart_toEndOf="@+id/recommendation_item1_sticker1"
                app:layout_constraintTop_toBottomOf="@+id/tv_recommendation_item1_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>